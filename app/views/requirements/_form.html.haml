= form_with(model: requirement, local: true) do |form|
  - if requirement.errors.any?
    #error_explanation
      %h2
        = pluralize(requirement.errors.count, "error")
        prohibited this requirement from being saved:
      %ul
        - requirement.errors.full_messages.each do |message|
          %li= message

  .field
    = form.label :status
    = form.select :status, Requirement.status.options
  .field
    = form.label :condition
    = form.text_area :condition, id: :requirement_condition, size: '80x10'
  .field
    = form.label :description
    = form.text_area :description, id: :requirement_description, size: '80x10'
  .field
    = form.label :remark
    = form.text_area :remark, id: :requirement_remark, size: '80x10'
  .actions
    = form.submit
